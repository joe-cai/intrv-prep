#include <iostream>
#include <fstream>
using namespace std;

int main() {
    int N, Q;
    cin >> N >> Q;
    vector<int> end1(N - 1, 0), end2(N - 1, 0), val(N - 1, 0);
    for (int i = 0; i < N - 1; i++)
	cin >> end1[i] >> end2[i] >> val[i];
    // parse the tree
    vector<int> parent(N + 1, -1);
    parent[1] = 0;
    for (int t = 0; t < N; t++) {
	for (int i = 0; i < N - 1; i++) {
	    if (end1[i] != -1 && end2[i] == -1)
		parent[end2[i]] = end1[i];
	    else if (end1[i] == -1 && end2[i] != -1)
		parent[end1[i]] = end2[i];
	}
    }
    // count degrees
    vector<int> branches(N + 1, 0);
    for (int i = 1; i < parent.size(); i++)
	branches[parent[i]]++;
    
}
